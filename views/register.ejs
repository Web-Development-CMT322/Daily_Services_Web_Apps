<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Registration Page</title>

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">

  <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600' rel='stylesheet' type='text/css'>
  <link href="//netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.css" rel="stylesheet">
  <link href="css/register.css" rel="stylesheet">

  <link rel="icon" href="mainImages/favicon.png" type="image/gif" sizes="16x16">

</head>

<body>

  <section id="main_1">
    <div class="container-fluid">
      <div class="first-part">
        <div class="bar">
          <nav class="navbar navbar-expand-sm navbar-dark">
            <a href="/"><img class="img" src="mainImages/company_logo.png" alt="shopping picture"></a>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <a href="/login" type="button" class="btn btn-danger gosignIn" style="color:white; font-weight: 600; font-family:Arial; padding:7px auto">Sign In</a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </section>

  <div class="testbox">
    <h1 class="registerheader" style="font-weight:500">Registration</h1>
    <form action="/register" method="POST" class="form-register">
      <hr style="height:3px;border-width:0;color:gray;background-color:gray">

      <div>
        <label for="name" class="form-label"></label>
        <input type="text" id="name" name="name" placeholder="Username" required>
      </div>
      <div>
        <label for="email" class="form-label"></label>
        <input type="email" id="email" name="email" placeholder="Email" required>
      </div>
      <div>
        <label for="password" class="form-label"></label></label>
        <input type="password" id="password" name="password" placeholder="Password" required>
      </div>
      <p>By clicking Register, you agree on our <a href="#">terms and condition</a>.</p>
      <button class="btn btn-primary submit-button" type="submit">Register</button>
    </form>
  </div>
</body>
</html>
